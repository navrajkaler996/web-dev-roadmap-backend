model Course {
  id          Int     @id @default(autoincrement())
  title       String
  description String?

  started   Boolean
  completed Boolean

  topics Topic[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Topic {
  id    Int    @id @default(autoincrement())
  name  String
  level String

  courseId Int
  course   Course? @relation(fields: [courseId], references: [id])
}
